{
  "compilerOptions": {
    "target": "es2024",                                 
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
